@model Capentry.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<head>
    <link href="~/Content/CSS/Account.css" rel="stylesheet" type="text/css" />
</head>

<div class="container-fluid" id="main-container">
    <div class="row flex-column justify-content-center align-content-center" id="the-row">
        <div class="col-sm-8 col-md-8 col-lg-5" id="text-container">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h2 class="text-center header-text">@ViewBag.Title</h2>

                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3 mt-4">
                    <div class="col-md-offset-2 col">
                        <input type="submit" class="btn btn-dark max-width" value="Reset" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
