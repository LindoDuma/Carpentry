@model Capentry.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<link href="~/Content/CSS/Login.css" rel="stylesheet" type="text/css" />

<div class="container-fluid p-5" id="LoginContainer">
    <div class="row flex-column">
        <div class="d-flex justify-content-center">
            @Html.ActionLink("BSLP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand d-flex align-self-center text-center" })
        </div>
        <div class="col text-center pb-1">
            <h2>@ViewBag.Title</h2>
        </div>

        <div class="col">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Create a new account</h4>

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="mb-3">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.LastName, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "col control-label" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "col control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col control-label" })
                    <div class="col">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="mb-3">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-dark" value="Register" />
                    </div>
                </div>

                <p>
                    @Html.ActionLink("Login", "Login") if you already have an account
                </p>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
