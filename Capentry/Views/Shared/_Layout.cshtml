<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CSS/Layout.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito|Ubuntu|Pacifico|Roboto" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*@Styles.Render("~/Content/CSS/Index.css")*@
    @*<link href="~/Content/CSS/Index.css" rel="stylesheet" type="text/css" />*@

</head>
<body>
    @using Microsoft.AspNet.Identity
    <nav class="navbar navbar-inverse navbar-dark navbar-expand-lg fixed-top" role="navigation">
        <div class="container-fluid">
            @Html.ActionLink("BSLP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#nav_toggle_target" aria-controls="#nav_toggle_target" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="nav_toggle_target">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Payment", "Payment", "Home", new object { }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Roles", "Index", "Roles", null, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        <div class="container" id="main">
            @RenderBody()
        </div>
        <footer id="footer">
            <div class="container" id="links">
                <div class="row">
                    <div class="col-lg-4" id="social">

                        <h3>Follow Us</h3>
                        <ul class="list-inline">
                            <li class="list-inline-item"><a class="fa fa-facebook" href="https://www.facebook.com"></a></li>
                            <li class="list-inline-item"><a class="fa fa-whatsapp" href="https://www.facebook.com"></a></li>
                            <li class="list-inline-item"><a class="fa fa-instagram" href="https://www.facebook.com"></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-4" id="contacts">
                        <h3>Contacts</h3>
                        <ul class="list-unstyled">
                            <li><span class="fa fa-phone"></span>
                                <div class="detail">
                                    <h4>Give us a call</h4>
                                    <p> 0727500762</p>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-4" id="nav">
                        <h3>Useful Links</h3>
                        <ul class="list-unstyled ">
                            <li class="nav-item"><a class="nav-link" href="~/Home/Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Home/Index">Payment</a></li>
                            <li class="nav-item"><a class="nav-link" href="~/Home/Index">About Us</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="container-fluid" id="copy">
                <p>&copy; @DateTime.Now.Year - BSLP Carpentry</p>
            </div>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
