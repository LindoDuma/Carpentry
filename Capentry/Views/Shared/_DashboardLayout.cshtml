<!DOCTYPE html>
<html>
<head>
    <title>@Page.Title</title>
    @RenderSection("head", required: false)
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/ico" href="~/Content/Images/Icon.jpg">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/CSS/Dashboard.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito|Ubuntu|Pacifico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    <script src="https://kit.fontawesome.com/de87691b11.js" crossorigin="anonymous"></script>
    @*@Styles.Render("~/Content/CSS/Index.css")*@
    @*<link href="~/Content/CSS/Index.css" rel="stylesheet" type="text/css" />*@
</head>
<body>
    @using Microsoft.AspNet.Identity

    <div class="d-flex flex-row vw-100 vh-100">
        <nav class="navbar navbar-inverse navbar-dark navbar-expand-lg fixed-top" id="TopNavbar" role="navigation">
            <div class="container-fluid">
                <div class="d-flex justify-content-start flex-row">
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#Sidebar2" aria-controls="#Sidebar2" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    @Html.ActionLink("BSLP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            </div>
        </nav>
        <nav class="d-flex flex-column ps-1 pe-1" id="Sidebar" role="navigation">
            <div class="container p-0 flex-column mb-auto">
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "selected nav-item" : " nav-item")">@Html.ActionLink("    Dashboard", "Index", "Dashboard", null, new { @class = "nav-link text-black bi bi-speedometer " })</li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Projects" ? "selected nav-item" : "nav-item")">@Html.ActionLink("    Projects", "Index", "Projects", null, new { @class = "nav-link text-black bi bi-grid " })</li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Images" ? "selected nav-item" : "nav-item")">@Html.ActionLink("    Images", "Index", "Images", null, new { @class = "nav-link text-black bi bi-images " })</li>
                    <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Roles" ? "selected nav-item" : "nav-item")">@Html.ActionLink("    Roles", "Index", "Roles", null, new { @class = "nav-link text-black bi bi-unlock " })</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </nav>
        <div class="container-fluid body-content">
            <div class="container" id="main">
                @RenderBody()
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
