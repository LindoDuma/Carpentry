@model Capentry.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<head>
    <link href="~/Content/CSS/Account.css" rel="stylesheet" type="text/css" />
</head>

<div class="container-fluid" id="main-container">
    <div class="row flex-column justify-content-center align-content-center" id="the-row">
        <div class="col-sm-8 col-md-8 col-lg-5" id="text-container">
            @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("rememberMe", @Model.RememberMe)
                <h2 class="text-center header-text">@ViewBag.Title</h2>
                <h4 class="text-center">Send verification code</h4>
                <hr />
                <div class="row">
                    <div class="col">
                        Select Two-Factor Authentication Provider:
                        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                        <input type="submit" value="Submit" class="btn btn-dark max-width" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
