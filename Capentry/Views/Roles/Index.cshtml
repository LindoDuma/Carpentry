@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid pt-5 ps-2 pe-2 ">
    <h2>Roles</h2>

    <div class="d-flex flex-row gap-2">
        @Html.ActionLink("    Create New", "Create", "Roles", new { @class = "btn btn-dark bi bi-plus-lg" })
        @Html.ActionLink("    Register Role", "RegisterRole", "Account", new {@class= "btn btn-dark bi bi-person-plus" })
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
